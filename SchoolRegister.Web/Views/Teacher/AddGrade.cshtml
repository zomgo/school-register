@model SchoolRegister.ViewModels.DTOs.AddGradeToStudentDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AddGrade"];
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGrade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>@Localizer["Student"] </label>
                <select asp-for="StudentId" class="form-control"
                        asp-items="@ViewBag.StudentsSelectList"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Subject"] </label>
                <select asp-for="SubjectId" class="form-control"
                        asp-items="@ViewBag.SubjectsSelectList"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["GradeValue"] </label>
                <select asp-for="GradeValue" class="form-control" asp-items="ViewBag.GradesScaleList"></select>
                <span asp-validation-for="GradeValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value=@Localizer["Add"]  class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Student">@Localizer["Back"] </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
