@model SchoolRegister.ViewModels.DTOs.SendEmailToParentDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<h2>@ViewData["Title"]</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendEmailToParent">
            <div class="form-group">

                <label>@Localizer["EmailTitle"]</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Messege"]</label>
                <input asp-for="Messege" class="form-control" />
                <span asp-validation-for="Messege" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value=@Localizer["Send"] class="btn btn-default" />
                </div>
            </div>
        </form>

    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Student">@Localizer["Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
